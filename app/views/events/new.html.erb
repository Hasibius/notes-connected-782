<%= simple_form_for(@event) do |f| %>
  <%= f.input :title %>
  <%= f.input :date %>
  <%= f.input :details %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none"},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>

  <%= f.association :genre, collection: Genre.all %>
  <%= f.button :submit %>
<% end %>
