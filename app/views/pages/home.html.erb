<div class="banner" style="background-image: url(<%= asset_path 'banner-dark-blue-blur.jpg' %>);">
  <div class="container">
    <h1>The best place to connect through music</h1>
    <p>Let's find gigs nearby!</p>
    <%= simple_form_for :search, url: '#', method: :get do |f| %>
    <div class="search-box">
      <input class="" type="text" placeholder="What are you looking for?" name="search[query]" id="search_query" />
      <%= link_to events_path do %>
        <i class="fas fa-search p-3"></i>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h3>Highlights</h3>
  <div class="row">
    <a href="/events"><img src="" alt="">Upcomming events</a>
    <a href="/events"><img src="" alt="">Events near you</a>
    <a href="/events"><img src="" alt="">Events</a>
  </div>
  <h3>More events</h3>
  <%= render 'events/cards' %>
  <h3>Categories</h3>
  <%= render 'events/genres' %>
</div>
